<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.survey.SgpaFragment"
    android:background="#ffffff">

    <TextView
        android:id="@+id/sgpa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="SGPA"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subtitleSgpa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Please enter the SGPAs of all the 8 semesters"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sgpa" />

    <TextView
        android:id="@+id/noteTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="15dp"
        android:text="Note : If SGPA is N/A, then enter 0"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subtitleSgpa" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/noteTV">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="24dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/sgpa1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="1st Sem"
                android:inputType="numberDecimal"
                android:textColor="#000000"
                android:textColorHint="#000000" />

            <EditText
                android:id="@+id/sgpa2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="2nd Sem"
                android:inputType="numberDecimal"
                android:textColor="#000000"
                android:textColorHint="#000000" />

            <EditText
                android:id="@+id/sgpa3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="3rd Sem"
                android:inputType="numberDecimal"
                android:textColor="#000000"
                android:textColorHint="#000000" />

            <EditText
                android:id="@+id/sgpa4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="4th Sem"
                android:inputType="numberDecimal"
                android:textColor="#000000"
                android:textColorHint="#000000" />

            <EditText
                android:id="@+id/sgpa5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="5th Sem"
                android:inputType="numberDecimal"
                android:textColor="#000000"
                android:textColorHint="#000000" />

            <EditText
                android:id="@+id/sgpa6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="6th Sem"
                android:inputType="numberDecimal"
                android:textColor="#000000"
                android:textColorHint="#000000" />

            <EditText
                android:id="@+id/sgpa7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="7th Sem"
                android:inputType="numberDecimal"
                android:textColor="#000000"
                android:textColorHint="#000000" />

            <EditText
                android:id="@+id/sgpa8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="8th Sem"
                android:inputType="numberDecimal"
                android:textColor="#000000"
                android:textColorHint="#000000" />

        </LinearLayout>

    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>