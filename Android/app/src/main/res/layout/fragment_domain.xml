<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.survey.DomainFragment"
    android:background="#ffffff">

    <TextView
        android:id="@+id/domain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Domain"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/domain"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose one or more domain"
            android:textSize="16sp"
            android:textColor="#000000"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">

                <CheckBox
                    android:id="@+id/mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mobile (Android / ios / Flutter / React Native)"
                    android:layout_marginBottom="4dp"/>

                <CheckBox
                    android:id="@+id/ml_or_ai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ML / AI"
                    android:layout_marginBottom="4dp"/>

                <CheckBox
                    android:id="@+id/webDevelopment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Web Development (Front end / Back end / Both)"
                    android:layout_marginBottom="4dp"/>

                <CheckBox
                    android:id="@+id/ui_and_ux"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="UI and UX"
                    android:layout_marginBottom="4dp"/>

                <CheckBox
                    android:id="@+id/cloudComputing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cloud Computing"
                    android:layout_marginBottom="4dp"/>

                <CheckBox
                    android:id="@+id/dataScience"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Data Science and Big Data"
                    android:layout_marginBottom="4dp"/>

                <CheckBox
                    android:id="@+id/competitiveCoding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Competitive Coding"
                    android:layout_marginBottom="4dp"/>

                <CheckBox
                    android:id="@+id/dataStructers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Data Structers and Algorithms"
                    android:layout_marginBottom="4dp"/>

                <CheckBox
                    android:id="@+id/testing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Testing"
                    android:layout_marginBottom="4dp"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>